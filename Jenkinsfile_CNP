#!groovy
import uk.gov.hmcts.contino.AppPipelineDsl

properties(
    [[$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/fees-register-app.git'],
     pipelineTriggers([[$class: 'GitHubPushTrigger']])]
)

@Library('Infrastructure')

def type = "java"

def product = "fees-register"

def app = "api"

// Configure branches to sync with master branch
def branchesToSync = ['demo', 'ithc', 'perftest']

env.PACT_BROKER_URL = 'pact-broker.platform.hmcts.net'
env.PACT_BROKER_SCHEME = 'https'
env.PACT_BROKER_PORT = '443'
env.PACTBROKER_CONSUMERVERSIONSELECTORS_RAWJSON = '''
  [
    {"consumer": "civil_general_applications", "latest": true},
    {"consumer": "civil_service", "latest": true},
    {"consumer": "divorce_feeAndPaymentService_feeRegister", "latest": true},
    {"consumer": "fpl_ccdConfiguration", "latest": true},
    {"consumer": "fr_caseOrchestratorService", "latest": true},
    {"consumer": "ia_caseApi", "latest": true},
    {"consumer": "ia_caseDocumentsApi", "latest": true},
    {"consumer": "ia_casePaymentsApi", "latest": true},
    {"consumer": "pcs_api", "latest": true},
    {"consumer": "feeRegister_lookUp", "latest": true},
    {"consumer": "prl_cos", "latest": true},
    {"consumer": "probate_backOffice", "latest": true},
    {"consumer": "probate_caveatsFrontEnd", "latest": true}
  ]
  '''


List<LinkedHashMap<String, Object>> secrets1 = [
        secret('freg-idam-test-user-password', 'TEST_USER_PASSWORD'),
        secret('freg-idam-generated-user-email-pattern', 'GENERATED_USER_EMAIL_PATTERN'),
        secret('freg-idam-client-secret', 'OAUTH2_CLIENT_SECRET')
]

def vaultOverrides = [
    'preview': 'aat',
    'hmctsdemo': 'aat',

]

def secrets = [
    'ccpay-${env}': [
        secret('freg-idam-test-user-password', 'TEST_USER_PASSWORD'),
        secret('freg-idam-generated-user-email-pattern', 'GENERATED_USER_EMAIL_PATTERN'),
        secret('freg-idam-client-secret', 'OAUTH2_CLIENT_SECRET')
    ]
]

 static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

withPipeline(type, product, app) {
    overrideVaultEnvironments(vaultOverrides)
    loadVaultSecrets(secrets)
    enableDbMigration('fees-register')
    enableAksStagingDeployment()

    afterAlways('functionalTest:aat') {
        publishHTML target: [
            allowMissing         : true,
            alwaysLinkToLastBuild: true,
            keepAll              : true,
            reportDir            : "api/target/site/serenity",
            reportFiles          : "index.html",
            reportName           : "AAT Serenity Functional Report"
        ]

    }

    afterAlways('functionalTest:preview') {
        publishHTML target: [
            allowMissing         : true,
            alwaysLinkToLastBuild: true,
            keepAll              : true,
            reportDir            : "api/target/site/serenity/",
            reportFiles          : "index.html",
            reportName           : "Preview Serenity Functional Report"
        ]

    }
    disableLegacyDeployment()

    onMaster() {
        enablePactAs([AppPipelineDsl.PactRoles.PROVIDER])

    }
    onPR() {
        enablePactAs([AppPipelineDsl.PactRoles.PROVIDER])
    }

    //Sync demo,ithc and perftest with master branch
    syncBranchesWithMaster(branchesToSync)
}
