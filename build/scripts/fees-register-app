#!/usr/bin/env sh

##############################################################################
##
##  fees-register-app start up script for UN*X
##
##############################################################################

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`"/$link"
    fi
done
SAVED="`pwd`"
cd "`dirname \"$PRG\"`/.." >/dev/null
APP_HOME="`pwd -P`"
cd "$SAVED" >/dev/null

APP_NAME="fees-register-app"
APP_BASE_NAME=`basename "$0"`

# Add default JVM options here. You can also use JAVA_OPTS and FEES_REGISTER_APP_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

warn () {
    echo "$*"
}

die () {
    echo
    echo "$*"
    echo
    exit 1
}

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

CLASSPATH=$APP_HOME/lib/spring-boot-starter-tomcat-1.5.9.RELEASE.jar:$APP_HOME/lib/tomcat-juli-8.5.23.jar:$APP_HOME/lib/spring-core-4.3.13.RELEASE.jar:$APP_HOME/lib/jackson-databind-2.8.10.jar:$APP_HOME/lib/jul-to-slf4j-1.7.25.jar:$APP_HOME/lib/fees-register-api-contract-1.0.1-SNAPSHOT.jar:$APP_HOME/lib/logback-classic-1.1.11.jar:$APP_HOME/lib/spring-security-web-4.2.3.RELEASE.jar:$APP_HOME/lib/aspectjweaver-1.8.13.jar:$APP_HOME/lib/spring-tx-4.3.13.RELEASE.jar:$APP_HOME/lib/j2objc-annotations-1.1.jar:$APP_HOME/lib/jandex-2.0.0.Final.jar:$APP_HOME/lib/commons-codec-1.10.jar:$APP_HOME/lib/validation-api-1.1.0.Final.jar:$APP_HOME/lib/httpcore-4.4.8.jar:$APP_HOME/lib/jcl-over-slf4j-1.7.25.jar:$APP_HOME/lib/springfox-swagger2-2.6.0.jar:$APP_HOME/lib/tomcat-embed-core-8.5.23.jar:$APP_HOME/lib/tomcat-embed-el-8.5.23.jar:$APP_HOME/lib/hibernate-validator-5.3.6.Final.jar:$APP_HOME/lib/spring-context-4.3.13.RELEASE.jar:$APP_HOME/lib/jboss-logging-3.3.1.Final.jar:$APP_HOME/lib/logstash-logback-encoder-4.8.jar:$APP_HOME/lib/java-logging-1.2.0.jar:$APP_HOME/lib/error_prone_annotations-2.0.18.jar:$APP_HOME/lib/spring-webmvc-4.3.13.RELEASE.jar:$APP_HOME/lib/tomcat-embed-websocket-8.5.23.jar:$APP_HOME/lib/springfox-spring-web-2.6.0.jar:$APP_HOME/lib/hibernate-jpa-2.1-api-1.0.0.Final.jar:$APP_HOME/lib/springfox-core-2.6.0.jar:$APP_HOME/lib/hibernate-commons-annotations-5.0.1.Final.jar:$APP_HOME/lib/spring-boot-starter-1.5.9.RELEASE.jar:$APP_HOME/lib/springfox-spi-2.6.0.jar:$APP_HOME/lib/spring-boot-devtools-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-security-config-4.2.3.RELEASE.jar:$APP_HOME/lib/mapstruct-1.0.0.Final.jar:$APP_HOME/lib/user-token-parser-spring-1.0.0.337.jar:$APP_HOME/lib/swagger-annotations-1.5.10.jar:$APP_HOME/lib/spring-jdbc-4.3.13.RELEASE.jar:$APP_HOME/lib/swagger-models-1.5.10.jar:$APP_HOME/lib/animal-sniffer-annotations-1.14.jar:$APP_HOME/lib/spring-data-commons-1.13.9.RELEASE.jar:$APP_HOME/lib/spring-boot-starter-aop-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-boot-starter-jdbc-1.5.9.RELEASE.jar:$APP_HOME/lib/jsr305-1.3.9.jar:$APP_HOME/lib/spring-boot-starter-logging-1.5.9.RELEASE.jar:$APP_HOME/lib/logback-core-1.1.11.jar:$APP_HOME/lib/joda-time-2.9.9.jar:$APP_HOME/lib/dom4j-1.6.1.jar:$APP_HOME/lib/spring-aop-4.3.13.RELEASE.jar:$APP_HOME/lib/tomcat-annotations-api-8.5.23.jar:$APP_HOME/lib/spring-data-jpa-1.11.9.RELEASE.jar:$APP_HOME/lib/spring-expression-4.3.13.RELEASE.jar:$APP_HOME/lib/snakeyaml-1.17.jar:$APP_HOME/lib/fees-register-api-1.0.1-SNAPSHOT.jar:$APP_HOME/lib/fees-register-model-1.0.1-SNAPSHOT.jar:$APP_HOME/lib/log4j-over-slf4j-1.7.25.jar:$APP_HOME/lib/jackson-core-2.8.10.jar:$APP_HOME/lib/slf4j-api-1.7.25.jar:$APP_HOME/lib/fees-register-app-1.0.1-SNAPSHOT.jar:$APP_HOME/lib/liquibase-core-3.5.3.jar:$APP_HOME/lib/spring-beans-4.3.13.RELEASE.jar:$APP_HOME/lib/spring-boot-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-orm-4.3.13.RELEASE.jar:$APP_HOME/lib/springfox-schema-2.6.0.jar:$APP_HOME/lib/spring-plugin-metadata-1.2.0.RELEASE.jar:$APP_HOME/lib/auth-checker-core-1.0.0.46.jar:$APP_HOME/lib/hibernate-core-5.0.12.Final.jar:$APP_HOME/lib/spring-plugin-core-1.2.0.RELEASE.jar:$APP_HOME/lib/jjwt-0.7.0.jar:$APP_HOME/lib/spring-boot-starter-actuator-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-boot-starter-web-1.5.9.RELEASE.jar:$APP_HOME/lib/classmate-1.3.4.jar:$APP_HOME/lib/postgresql-9.4.1212.jre7.jar:$APP_HOME/lib/spring-boot-actuator-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-aspects-4.3.13.RELEASE.jar:$APP_HOME/lib/java-logging-spring-1.2.0.jar:$APP_HOME/lib/springfox-swagger-common-2.6.0.jar:$APP_HOME/lib/spring-boot-starter-data-jpa-1.5.9.RELEASE.jar:$APP_HOME/lib/user-token-parser-1.0.0.337.jar:$APP_HOME/lib/spring-security-core-4.2.3.RELEASE.jar:$APP_HOME/lib/spring-boot-starter-security-1.5.9.RELEASE.jar:$APP_HOME/lib/hibernate-entitymanager-5.0.12.Final.jar:$APP_HOME/lib/service-token-parser-spring-1.0.0.179.jar:$APP_HOME/lib/service-token-parser-1.0.0.179.jar:$APP_HOME/lib/springfox-swagger-ui-2.6.0.jar:$APP_HOME/lib/spring-boot-autoconfigure-1.5.9.RELEASE.jar:$APP_HOME/lib/spring-test-4.3.13.RELEASE.jar:$APP_HOME/lib/antlr-2.7.7.jar:$APP_HOME/lib/javassist-3.21.0-GA.jar:$APP_HOME/lib/jackson-annotations-2.8.0.jar:$APP_HOME/lib/auth-checker-spring-1.0.0.46.jar:$APP_HOME/lib/httpclient-4.5.3.jar:$APP_HOME/lib/javax.transaction-api-1.2.jar:$APP_HOME/lib/spring-web-4.3.13.RELEASE.jar:$APP_HOME/lib/tomcat-jdbc-8.5.23.jar:$APP_HOME/lib/guava-22.0.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" -a "$nonstop" = "false" ] ; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" -o "$MAX_FD" = "max" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        ulimit -n $MAX_FD
        if [ $? -ne 0 ] ; then
            warn "Could not set maximum file descriptor limit: $MAX_FD"
        fi
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS \"-Xdock:name=$APP_NAME\" \"-Xdock:icon=$APP_HOME/media/gradle.icns\""
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin ; then
    APP_HOME=`cygpath --path --mixed "$APP_HOME"`
    CLASSPATH=`cygpath --path --mixed "$CLASSPATH"`
    JAVACMD=`cygpath --unix "$JAVACMD"`

    # We build the pattern for arguments to be converted via cygpath
    ROOTDIRSRAW=`find -L / -maxdepth 1 -mindepth 1 -type d 2>/dev/null`
    SEP=""
    for dir in $ROOTDIRSRAW ; do
        ROOTDIRS="$ROOTDIRS$SEP$dir"
        SEP="|"
    done
    OURCYGPATTERN="(^($ROOTDIRS))"
    # Add a user-defined pattern to the cygpath arguments
    if [ "$GRADLE_CYGPATTERN" != "" ] ; then
        OURCYGPATTERN="$OURCYGPATTERN|($GRADLE_CYGPATTERN)"
    fi
    # Now convert the arguments - kludge to limit ourselves to /bin/sh
    i=0
    for arg in "$@" ; do
        CHECK=`echo "$arg"|egrep -c "$OURCYGPATTERN" -`
        CHECK2=`echo "$arg"|egrep -c "^-"`                                 ### Determine if an option

        if [ $CHECK -ne 0 ] && [ $CHECK2 -eq 0 ] ; then                    ### Added a condition
            eval `echo args$i`=`cygpath --path --ignore --mixed "$arg"`
        else
            eval `echo args$i`="\"$arg\""
        fi
        i=$((i+1))
    done
    case $i in
        (0) set -- ;;
        (1) set -- "$args0" ;;
        (2) set -- "$args0" "$args1" ;;
        (3) set -- "$args0" "$args1" "$args2" ;;
        (4) set -- "$args0" "$args1" "$args2" "$args3" ;;
        (5) set -- "$args0" "$args1" "$args2" "$args3" "$args4" ;;
        (6) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" ;;
        (7) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" ;;
        (8) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" ;;
        (9) set -- "$args0" "$args1" "$args2" "$args3" "$args4" "$args5" "$args6" "$args7" "$args8" ;;
    esac
fi

# Escape application args
save () {
    for i do printf %s\\n "$i" | sed "s/'/'\\\\''/g;1s/^/'/;\$s/\$/' \\\\/" ; done
    echo " "
}
APP_ARGS=$(save "$@")

# Collect all arguments for the java command, following the shell quoting and substitution rules
eval set -- $DEFAULT_JVM_OPTS $JAVA_OPTS $FEES_REGISTER_APP_OPTS -classpath "\"$CLASSPATH\"" uk.gov.hmcts.FeesRegisterServiceApplication "$APP_ARGS"

# by default we should be in the correct project dir, but when run from Finder on Mac, the cwd is wrong
if [ "$(uname)" = "Darwin" ] && [ "$HOME" = "$PWD" ]; then
  cd "$(dirname "$0")"
fi

exec "$JAVACMD" "$@"
